<div class="topProducts">
    <p>Bienvenido/a <a class="firstLastName" href="/profile"> {{user.first_name}} {{user.last_name}} </a>! Rol: <span
            class="rolStyleProducts">{{user.rol}}</span></p>
    <a class="cerrarSesionStyle" href="/api/sessions/logout">Cerrar Sesion</a>
</div>
<h1 class="titleProducts">🐶 - Nuestros Productos - 🐱</h1>
<div class="divFlex">
    {{#each products}}
    <div class="divMain">
        <p class="divTitle"> {{this.title}} </p>
        <p class="divDescription"> {{this.description}} </p>
        <p class="divPrice"> ${{this.price}} </p>
        <div class="flexBtn">
            <form action="/api/carts/{{../cartId}}/product/{{id}}" method="POST"></form>
                <button class="divBtn" type="submit">Agregar</button>
            </form>
        </div>
    </div>
    {{/each}}
</div>

<div class="prevAndNext">
    {{#if hasPrevPage}}
    <a class="antStyle" href="/products?page={{prevPage}}"> ⬅ Anterior</a>
    {{/if}}

    {{#if hasNextPage}}
    <a class="sigStyle" href="/products?page={{nextPage}}">Siguiente ➡</a>
    {{/if}}
</div>


<p class="currentPageStyle">Estas en la pagina {{currentPage}} de {{totalPages}}</p>