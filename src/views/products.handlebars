<h1 class="titleProducts">Listado de productos:</h1>
<div class="divFlex">
{{#each products}}
    <div class="divMain">
        <p class="divTitle"> {{this.title}} </p>
        <p class="divDescription"> {{this.description}} </p>
        <p class="divPrice"> ${{this.price}} </p>
        <div class="flexBtn">
            <button class="divBtn"> Agregar </button>
        </div>
    </div>
{{/each}}
</div>

<div class="prevAndNext">
    {{#if hasPrevPage}}
        <a href="/products?page={{prevPage}}"> Anterior </a>
    {{/if}}

    {{#if hasNextPage}}
        <a href="/products?page={{nextPage}}"> Siguiente </a>
    {{/if}}
</div>

<p class="currentPageStyle">Estas en la pagina {{currentPage}} de {{totalPages}}</p>